<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history_matches_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="7"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/history_image_team1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|start"
                android:layout_weight="1"
                android:src="@mipmap/pantojatransparent_copy" />

            <TextView
                android:id="@+id/history_team1_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom|start"
                android:text="Pantoja FC"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_weight="3"/>

            <TextView

                android:id="@+id/history_text_score_team1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:text=" 2 "
                android:textSize="20sp"
                android:layout_weight="1"
                android:textStyle="normal" />

            <TextView

                android:id="@+id/history_final"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:text="Final"
                android:textSize="16sp"
                android:layout_weight="2"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="7"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/history_image_team2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|start"
                android:layout_weight="1"
                android:src="@mipmap/ic_garrincha_fc" />

            <TextView

                android:id="@+id/history_team2_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom|start"
                android:text="Garrincha FC"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_weight="3"/>

            <TextView

                android:id="@+id/history_text_score_team2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:text=" 1 "
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
