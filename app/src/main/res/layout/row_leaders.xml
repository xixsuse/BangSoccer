<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/team_card_view"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:elevation="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp">

    <!--  card_view:cardCornerRadius="10dp"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/leaders_player_avatar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="2.5"
            android:src="@drawable/ic_player_name_icon2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7.5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="16dp"
                    android:id="@+id/leaders_player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Josian Acevedo"

                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="16sp" />



                <TextView
                    android:id="@+id/leaders_player_club"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Garrincha FC"
                    android:textSize="12sp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">


                <TextView
                    android:layout_marginTop="12dp"
                    android:id="@+id/leaders_player_goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/colorAccent"
                    android:text="11"
                    android:textSize="26sp"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
