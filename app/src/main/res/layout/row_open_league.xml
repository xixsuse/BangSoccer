<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/history_matches_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:orientation="vertical"
            android:weightSum="7">

            <TextView
                android:id="@+id/open_league_event_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="clip_horizontal"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Martes 16 de Abril - 5:00pm"
                android:textSize="14sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/open_league_location"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="clip_horizontal"
                android:layout_weight="1.5"
                android:gravity="start|center"
                android:text="La Media Cancha"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/open_league_description_txt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="clip_horizontal"
                android:layout_weight="1.5"
                android:gravity="start|center"
                android:text="Partido Amistoso"
                android:textSize="14sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/open_league_price_icon"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:src="@drawable/ic_coins"
                    />

                <TextView
                    android:id="@+id/open_league_price_txt"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:gravity="start|center"

                    android:text="1,200.00 $ "
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:textStyle="normal"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
