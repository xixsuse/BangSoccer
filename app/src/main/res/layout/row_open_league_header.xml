<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/open_league_weekly_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:weightSum="10"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/open_league_header_img"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:src="@drawable/open_league_weekly_icon" />

        <TextView
            android:id="@+id/open_league_header_event_tittle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:layout_gravity="clip_horizontal"
            android:text="Abierto Esta semana"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:textStyle="normal"
            android:layout_weight="9"/>


    </LinearLayout>

</android.support.v7.widget.CardView>